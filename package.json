{
    "name": "django-test-runner",
    "displayName": "Django Test Runner",
    "description": "Run Django and Django-nose tests in VSCode",
    "version": "5.0.1",
    "publisher": "Pachwenko",
    "repository": {
        "type": "git",
        "url": "https://github.com/Pachwenko/VSCode-Django-Test-Runner"
    },
    "engines": {
        "vscode": "^1.95.0"
    },
    "categories": [
        "Testing",
        "Other"
    ],
    "keywords": [
        "python",
        "python tests",
        "django",
        "django tests",
        "tests"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "Use VSCode Python Path",
                "properties": {
                    "python.djangoTestRunner.useVSCodePythonPath": {
                        "type": "boolean",
                        "default": true,
                        "description": "Whether or not to use the default python path from the Python extension. If false, please specify your own python command with the manageProgram setting.",
                        "scope": "resource"
                    }
                }
            },
            {
                "title": "Test prefix",
                "properties": {
                    "python.djangoTestRunner.prefixCommand": {
                        "type": "string",
                        "default": "",
                        "description": "Prefix to the test command. Useful for environment variables, docker compose, poetry run, or cd commands. Example: DJANGO_SETTINGS_MODULE=project.settings.test",
                        "scope": "resource"
                    }
                }
            },
            {
                "title": "Test program",
                "properties": {
                    "python.djangoTestRunner.manageProgram": {
                        "type": "string",
                        "default": "manage.py test",
                        "description": "The test command to run. This can be any command that accepts a test path as an argument. Examples: 'manage.py test', 'pytest', 'python -m unittest'. See README for more examples.",
                        "scope": "resource"
                    }
                }
            },
            {
                "title": "Test Flags",
                "properties": {
                    "python.djangoTestRunner.flags": {
                        "type": "string",
                        "default": "",
                        "description": "Extra flags appended after the test path. Example: --nocapture --verbosity=2",
                        "scope": "resource"
                    }
                }
            },
            {
                "title": "Strip Root Folder from test path",
                "properties": {
                    "python.djangoTestRunner.stripRootFolder": {
                        "type": "boolean",
                        "default": false,
                        "description": "Strips the first folder from the test path. Useful when manage.py is in a subdirectory. Otherwise use rootPackageName for more control.",
                        "scope": "resource"
                    }
                }
            },
            {
                "title": "Root Django Project Package Name",
                "properties": {
                    "python.djangoTestRunner.rootPackageName": {
                        "type": "string",
                        "default": "",
                        "description": "The root package to strip from the test path. For example, if your project is in 'src/' and manage.py is inside 'src/', set this to 'src'. stripRootFolder must be disabled for this to work.",
                        "scope": "resource"
                    }
                }
            },
            {
                "title": "Test with Django-Nose",
                "properties": {
                    "python.djangoTestRunner.djangoNose": {
                        "type": "boolean",
                        "default": false,
                        "description": "Whether or not to use a colon to denote class/method inside a file. Required for testing with Django-Nose.",
                        "scope": "resource"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "python.djangoTestRunner.runPreviousTests",
                "title": "Django Test Runner: Run Previous Tests"
            },
            {
                "command": "python.djangoTestRunner.runMethodTests",
                "title": "Django Test Runner: Run Closest Method Test"
            },
            {
                "command": "python.djangoTestRunner.runClassTests",
                "title": "Django Test Runner: Run Closest Class Tests"
            },
            {
                "command": "python.djangoTestRunner.runFileTests",
                "title": "Django Test Runner: Run Current File Tests"
            },
            {
                "command": "python.djangoTestRunner.runAppTests",
                "title": "Django Test Runner: Run Current App Tests"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "node esbuild.mjs --production",
        "watch:esbuild": "node esbuild.mjs --watch",
        "lint": "eslint src/",
        "test:unit": "TS_NODE_PROJECT=tsconfig.test.json mocha --require ts-node/register 'src/test/unit/**/*.test.ts'",
        "test:integration": "node ./out/test/integration/runTest.js",
        "test": "npm run test:unit"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^25.3.0",
        "@types/vscode": "^1.95.0",
        "@typescript-eslint/eslint-plugin": "^8.24.0",
        "@typescript-eslint/parser": "^8.56.1",
        "@vscode/test-electron": "^2.4.1",
        "@vscode/vsce": "^3.7.1",
        "esbuild": "^0.27.3",
        "eslint": "^10.0.2",
        "mocha": "^11.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3"
    }
}
